name: Checking Inputs 

on:
  workflow_dispatch:
    inputs:
      enviroment:
        description: "Choose an environment"
        required: true
        type: choice 
        options: 
          - dev
          - test
          - prod
      tag:
        description: "Choose a tag"
        required: true

jobs:
  runs-on: ubuntu
  input-demo:
    steps:
      - name: Printing Inputs
        run: echo "Environment the code is run is " ${{ inputs.environment }}
        run: echo "Artefact tag is " ${{ inputs.tag }}
